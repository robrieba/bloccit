<h1>New Advertisement</h1>

<div class="row">
  <div class="col-md-8">
  <%= form_for @advertisement do |f| %>
    <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter the title of the ad" %>
    </div>
    <div class="form-group">
      <%= f.label :copy %>
      <%= f.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter the copy for this ad" %>
    </div>
    <div class="input-group">
      <span class="input-group-addon">$</span>
        <%= f.number_field :price, class: 'form-control', placeholder: "Price" %>
      <span class="input-group-addon">.00</span>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>
</div>
