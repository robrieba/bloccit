<h2>Sign Up Confirmation</h2>

 <div class="row">
   <div class="col-md-8">
     <%= form_for @user do |f| %>
        <h4>Are you sure these values are correct?</h4>
        <p>Email: <%= @user.email %></p>
        <p>Name: <%= @user.name %></p>
        <%= f.hidden_field :email, :value => @user.email %>
        <%= f.hidden_field :name, :value => @user.name %>
        <%= f.hidden_field :password, :value => @user.password %>
        <%= f.hidden_field :password_confirmation, :value => @user.password_confirmation %>
        <div class="form-group">
          <%= f.submit "Yes", class: 'btn btn-success' %>
          <%= link_to "No", new_user_path, class: 'btn btn-default' %>
       </div>
     <% end %>
   </div>
 </div>
