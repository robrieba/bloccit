<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
        <% avatar_url = User.avatar_url(@user, 128) %>
       <% unless avatar_url.nil? %>
         <div class="media-left">
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
         </small>
       </div>
     </div>
   </div>
 </div>

 <h2>Posts</h2>
 <%= render_user_posts(@user) %>

 <h2>Comments</h2>
 <%= render_user_comments(@user) %>

 <h2>Favorites</h2>
  <div class="row">
    <div class="col-md-8">
      <% @user.favorites.each do |favorite| %>
      <div class="media">
        <div class="media-body">
          <%= link_to favorite.post.title, topic_post_path(favorite.post.topic, favorite.post) %>          
          <%= image_tag User.avatar_url(@user, 20) %>
          <small>(Votes: <%= favorite.post.votes.count %></small>
          <small>Comments: <%= favorite.post.comments.count %>)</small>
        </div>
      </div>
      <% end %>
    </div>
  </div>
